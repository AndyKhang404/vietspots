  "privacy": {
    "title": "VietSpots Privacy Policy",
    "last_updated": "Last updated: 28/12/2025",
    "intro": "Welcome to VietSpots. We are committed to protecting user privacy and personal information. This policy describes how we collect, use, and protect your data.",
    "section1": {
      "title": "1. Information we collect",
      "item1": { "title": "Personal information:", "body": "When you register an account we may collect name, email and avatar." },
      "item2": { "title": "Location data:", "body": "With your permission we use GPS or IP to help find nearby places." },
      "item3": { "title": "User content:", "body": "Reviews, images and places you contribute to the community." }
    },
    "section2": {
      "title": "2. How we use information",
      "item1": "Provide and maintain VietSpots features.",
      "item2": "Personalize the user experience based on preferences and location.",
      "item3": "Send notifications about updates, features, or to respond to inquiries.",
      "item4": "Analyze performance to improve the app experience."
    },
    "section3": { "title": "3. Sharing information", "body": "VietSpots does not sell or rent your personal information to third parties. We only share data when: with your consent, to use third-party mapping services (e.g., Google Maps/Mapbox) to display geographic data, or to comply with legal requests." },
    "section4": { "title": "4. Data security", "body": "We apply standard security measures to prevent unauthorized access, alteration or destruction of data. No internet transmission is 100% secure." },
    "section5": { "title": "5. User rights", "body": "You have the right to access, correct, or request deletion of your personal data at any time via account settings or by contacting us." },
    "contact_line_start": "Contact information is kept separate for privacy and quick lookup ‚Äî see",
    "contact_line_end": "for support and contact channels."
  },
